{% extends 'base.html.twig' %}

{% block title %}Index
{% endblock %}
{% block header %}{% endblock %}

{% block body %}

	<body>
		<section class="services">
			<div id="services"></div>
			<div class="cards">
				<div class="card">
					<img src="assets/img/chambre (8).jpg" alt="chambres" class="mb-3"/>
					<div style="height: 200px; color: #fff">
						<h3 class="text-center text-dark">Chambres</h3>
						<p>
							Venez découvrir nos chambres pour votre plus grand confort
						</p>
					</div>
					<a href="{{ path('show') }}" class="button2">Découvrir les chambres</a>
				</div>
				<div class="card">
					<img src="{{ asset('assets/img/resto1.jpg') }}" alt="restaurant" class="mb-3"/>
					<div style="height: 200px; color: #fff">
						<h3 class="text-center text-dark">Restaurant</h3>
						<p>
							Nos plats sont confectionnés à la minute par notre chef cuisinier chaque jour
						</p>
					</div>
					<a href="{{ path('app_resto') }}" class="button2">Visiter le restaurant</a>
				</div>
				<div class="card">
					<img src="assets/img/spa1.jpg" alt="chambres" class="mb-3"/>
					<div style="height: 200px; color: #fff">
						<h3 class="text-center text-dark">Spa</h3>
						<p>
							Détendez-vous et offrez-vous un massage dont vous vous rappellerez longtemps
						</p>
					</div>
					<a href={{ path('app_spa') }} "" class="button2">Prenez soin de vous</a>
				</div>
			</div>
		</section>
	</body>
{% endblock %}
{% block footer %}
	<footer></footer>
{% endblock %}
