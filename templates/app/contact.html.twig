          }}) }}

          {{ form_row(contactForm.categorie, {
                'label': 'Categorie',
                'label_attr': {
                    'class': 'text-dark',
                    'style': 'text-align: left;'



          }}) }}

          {{ form_row(contactForm.message, {
                'label': 'Message',
                'label_attr': {
                    'class': 'text-dark',
