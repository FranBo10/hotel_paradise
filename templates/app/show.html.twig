{% extends 'base.html.twig' %}

{% block title %}Detail chambre
{% endblock %}

{% block body %}

	<div class="container mx-auto mt-3" style="max-width: 80%; color: #8b8a8a">
		<div class="text-center">
			<img src="{{ asset('assets/img/' ~ chambre.photo) }}" alt="{{ chambre.titre }}" class="mx-auto" width="70%" height="400">
		</div>
		<div class="flex-column col-md-8 mx-auto p-3 titre">
			<div class="info">
				<h4>Equipments et informations</h4>
				<p class="text-xs">{{ chambre.descriptionLongue|striptags }}</p>
			</div>


			<div class="info">
				<h4 class="mb-3">{{ chambre.titre|title }}</h4>
				<div class="flex-col">
					{{ form_start(form) }}
					<div class="d-flex gap-3">
						<div class="col-md-4">
							{{ form_row(form.date_arrivee, {
                    'widget': 'single_text',
                }) }}
						</div>
						<div class="col-md-4">
							{{ form_row(form.date_depart) }}
						</div>
					</div>
					<small>La suite est proposée à
						{{ chambre.prixJournalier/100|number_format( 2, '.') }}
						€ la nuit</small>
					<div class="row mt-5">
						<div class="row">
							<div class="col-md-6">
								{{ form_row(form.prenom) }}
							</div>
							<div class="col-md-6">
								{{ form_row(form.nom) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								{{ form_row(form.telephone) }}
							</div>
							<div class="col-md-6">
								{{ form_row(form.email) }}
							</div>
						</div>
					</div>
                    
					<button type="submit" class="button col-12">Enregistrer</button>
					{{ form_end(form) }}
				</div>
			</div>

		</div>

		{{ form_end(form) }}
	</div>


