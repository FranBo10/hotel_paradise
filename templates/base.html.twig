<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.3.0/pulse/bootstrap.min.css" integrity="sha512-uVYwYyXOAvo+4R3AGZfqzzGksUsdsegIgjYa5rsUrN+lDZq+PX3U8ofMm5zRl1gRMz0br7miqUOELmg7/dpuAA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		</head>
		{% block header %}
			<header>
				<a href="index.html" class="logo">Hôtel Paradise</a>
				<nav>
					<a href="{{path('home')}}">Home</a>
					<a href="#">Chambre</a>
					<a href="#">Restaurant</a>
					<a href="#">Spa</a>
					<a href="#">Réservation
					</a>
					<a href="#">Avis</a>
					<a href="#">L'hôtel</a>
					<a href="#">Actualités</a>
					<a href="#">Contact</a>
				</nav>
				<div
					class="buttons">
					{# {% if app.user %} #}
					<a href="{{path('app_logout')}}" class="btn btn-danger rounded me-3">Déconnexion</a>
					{# {% else %} #}
					<a href="{{path('app_register')}}" class=" btn btn-secondary rounded me-3">Inscription</a>
					<a href="{{path('app_login')}}" class="btn btn-primary rounded me-3">Connexion</a>
					{# {% endif %} #}
				</div>
				<div class="flags">
					<img src="assets/img/france.png" alt="fr"/>
					<img src="assets/img/united-kingdom.png" alt="en"/>
				</div>
			</header>
		{% endblock %}
		<body>
			{% block body %}{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		</body>
	</html>
