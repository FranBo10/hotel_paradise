		{% block carousel %}
			<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
				<div class="carousel-indicators">
					{% for slide in slider %}
						<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="{{ loop.index0 }}" {% if loop.first %} class="active" aria-current="true" {% endif %} aria-label="Slide {{ loop.index }}"></button>
					{% endfor %}
				</div>
				<div class="carousel-inner">
					{% for slide in slider %}
						<div class="carousel-item text-image {% if loop.first %}active{% endif %}">
							<div class="image-container">
								<img src="{{ asset('assets/img/' ~ slide.photo) }}" class="d-block w-100" alt="...">
								<div class="carousel-caption">
									{% if slide.page == "Avis" %}
										<h1>Hôtel Paradise, votre avis est précieux!</h1>
										<a href="#services" class="button">Donnez votre avis</a>
									{% elseif slide.page == "Chambre" %}
										<h1>Le refuge ultime pour votre confort et votre tranquillité</h1>
										<a href="#services" class="button">Découvrez nos chambres</a>
									{% elseif slide.page == "Restaurant" %}
										<h1>Hôtel Paradise, votre avis est précieux!</h1>
										<a href="#services" class="button">Découvrez notre restaurant</a>
									{% elseif slide.page == "Spa" %}
										<h1>Hôtel Paradise, votre avis est précieux!</h1>
										<a href="#services" class="button">Découvrez notre Spa</a>
									{% endif %}
								</div>
							</div>
						</div>
					{% endfor %}
				</div>

				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		{% endblock %}
	</html>
